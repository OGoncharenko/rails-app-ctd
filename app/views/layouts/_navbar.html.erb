<div class="navbar-container">
  <div class="nav-tabs">
    <div class="nav-tab-item <%= 'active' if current_page?(root_path) %> ">
      <%= link_to "Home", root_path %>
    </div>
    <div class="nav-tab-item <%= 'active' if current_page?(categories_path) %> ">
      <%= link_to "Discover", categories_path %>
    </div>
  </div>

    <% if current_user %>
    <div class="nav-tabs">
      <div class="nav-tab-item my-lists <%= 'active' if current_page?(lists_mylists_path) %> ">
        <%= link_to "My lists", lists_mylists_path %></div>
      <div class="nav-tab-item user-info">
        <div class="user-info-dropdown">
          <button class="dropdown-toggle" style="font-weight: bold;">
            Welcome, <%= current_user.first_name %>
          </button>
          <div class="dropdown-menu">
            <%= link_to "My Profile", user_path(current_user), class: "dropdown-item" %>
            <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item signout-link" %>
          </div>
        </div>
      </div>
    </div>
    <% else %>
      <div class="nav-tab-item session-tabs">
          <%= link_to "Sign in", new_user_session_path %>
          <%= link_to "Sign up", new_user_registration_path %>
      </div>
    <% end %>
</div>