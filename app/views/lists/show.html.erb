<h2><%= @list.name %></h2>

<p>Created by: <%= "#{@list.user.first_name} #{@list.user.last_name}" if @list.user %></p>

<div>
  <% @list.categories.each do |category| %>
    <div>
      <h5><%= category.name %></h5>
    </div>
  <% end %>
</div>

<ol>
    <% @list.list_items.each do |item, index| %>
      <li class="item">
        <%= index %><%= item.name %>
      </li>
    <% end %>
</ol>
<div><%= link_to "Edit List", edit_list_path(@list) %></div>
<%= button_to "Delete this list", @list, method: :delete, data: { confirm: "Are you sure?" } %>

<div>
  <%= link_to "All Lists", lists_path %>
</div>
