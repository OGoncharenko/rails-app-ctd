<h2><%= @list.name %></h2>

<p>Created by: <%= link_to "#{@list.user.first_name} #{@list.user.last_name}", user_path(@list.user) if @list.user %></p>

<div>
  <% @list.categories.each do |category| %>
    <div>
      <h5><%= category.name %></h5>
    </div>
  <% end %>
</div>

<ol>
    <% @list.list_items.each do |item| %>
      <li class="item">
        <%= item.name %>
      </li>
    <% end %>
</ol>
<div>
  <% if @list.user == current_user %>
    <%= link_to "Edit List", edit_list_path(@list) %>
    <%= button_to "Delete this list", @list, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
  <% end %>
</div>

<div>
  <%= link_to "All Lists", lists_path %>
</div>
