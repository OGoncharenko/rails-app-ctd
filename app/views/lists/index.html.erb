<% if @lists.any? %>
  <div class="lists-container">
    <% @lists.each do |list| %>
      <div class="list-card">
        <div class="list-name">
          <%= link_to list.name, list_path(list), class: "list-name" %>
        </div>
        <div class="user-tag">
          By:
          <% if list.user == current_user %>
            <%= link_to "You", user_path(current_user) %>
          <% else %>
          <%= link_to "#{list.user.first_name} #{list.user.last_name}", user_path(list.user) if list.user %>
          <% end %>
        </div>

        <div class="list-actions">
          <% if list.user == current_user %>
            <%= link_to edit_list_path(list) do %>
              <i class="fa-solid fa-pen-to-square"></i>
            <% end %>
            <%#= button_to list, method: :delete, data: { turbo_confirm: "Are you sure?" } do %>
<!--              <i class="fa-solid fa-trash-can"></i>-->
            <%# end %>
          <% end %>
        </div>
        <div class="categories">
          <% list.categories.each do |category| %>
            <div>
              <%= link_to category.name, category_path(category), style: "background-color: #{category_colors(category.name)}", class: "category-tag" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No lists found</p>
<% end %>

<div class="new-list"><%= link_to "New List", new_list_path, class: "add-btn" %></div>

<%# if @is_mylists %>
  <%#= link_to "Back to All Lists", lists_path, class: "btn btn-secondary mt-3" %>
<%# end %>
<%# unless @is_mylists %>
